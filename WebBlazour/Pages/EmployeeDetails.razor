@page "/employeedetails/{EmployeeId:int}"

@if (!IsDataLoaded)
{
    <p><em>Loading...</em></p>
}
else if (CurEmp is null)
{
    <p class="text-danger">Employee not found.</p>
}
else
{
    <h3 class="card-title">Employee Details for @CurEmp.FirstName @CurEmp.LastName</h3>

    <div class="form-group">
        <label class="col-form-label">Employee ID:</label>
        <label class="form-control">@CurEmp.EmployeeId</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">First Name:</label>
        <label class="form-control">@CurEmp.FirstName</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">Last Name:</label>
        <label class="form-control">@CurEmp.LastName</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">Email:</label>
        <label class="form-control">@CurEmp.Email</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">Phone Number:</label>
        <label class="form-control">@CurEmp.PhoneNumber</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">Country:</label>
        <label class="form-control">@(MyCountry?.Name ?? "NA")</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">Birth Date:</label>
        <label class="form-control">@CurEmp.BirthDate.ToShortDateString()</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">Joined Date:</label>
        <label class="form-control">@CurEmp.JoinedDate.ToShortDateString()</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">Exit Date:</label>
        <label class="form-control">@CurEmp.ExitDate?.ToShortDateString() ?? "N/A"</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">Gender:</label>
        <label class="form-control">@CurEmp.Gender</label>
    </div>

    <div class="form-group">
        <label class="col-form-label">Marital Status:</label>
        <label class="form-control">@CurEmp.MaritalStatus</label>
    </div>
    <div class="text-end">
        <button class="btn btn-secondary mt-3" @onclick='() => NavigationManager.NavigateTo("/employeeoverview")'>Back</button>
    </div>
}

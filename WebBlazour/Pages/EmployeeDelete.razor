@page "/employeedelete/{EmployeeId:int}"
@using WebBlazour.Service
@using SharedLibrary.Model
@inject NavigationManager Navigation
@inject IEmployeeDataService EmployeeDataService

<h3>Are you sure you want to delete this employee?</h3>

@if (emp == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card p-3">
        <p><strong>Name:</strong> @emp.FirstName @emp.LastName</p>
        <p><strong>Email:</strong> @emp.Email</p>
        <p><strong>Phone:</strong> @emp.PhoneNumber</p>
        <button class="btn btn-danger " @onclick="DeleteEmployee">Yes, Delete</button>
        <button class="btn btn-secondary mt-2" @onclick="Cancel">Cancel</button>
    </div>
}

@code {
    [Parameter]
    public int EmployeeId { get; set; }

    private Employee emp;

    protected override async Task OnInitializedAsync()
    {
        emp = await EmployeeDataService.GetEmployeeDetails(EmployeeId);
        if (emp == null)
        {
            Navigation.NavigateTo("/employeeoverview");
        }
    }

    private async Task DeleteEmployee()
    {
        await EmployeeDataService.DeleteEmployee(EmployeeId);
        Navigation.NavigateTo("/employeeoverview");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/employeeoverview");
    }
}
